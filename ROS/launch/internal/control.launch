<launch>

  <!-- Only put nodes here that are related to processing inside control -->
  <!-- There should be NO hardware dependencies! -->

  <!-- Pathplanning  -->
  <include file="$(find pathplanning)/launch/pathplanning.launch" pass_all_args="true"></include>

  <!-- Control node (generates output commands) -->
  <include file="$(find pure_pursuit)/launch/pure_pursuit.launch" pass_all_args="true">
    <arg name="reference_frame" default="ugr/car_odom" />
  </include>
  <!-- Control controller -->
  <include file="$(find control_controller)/launch/controller.launch" pass_all_args="true" />

</launch>