<launch>
    <node pkg="pid_car_control" type="run.py" name="pid_car_control" output="screen">

        <group ns="car_control">
            <param name="publish_rate" value="10" />
            <param name="stale_time" value="0.2" />
            <param name="speec/target" value="3" />

            <group ns="trajectory">
                <param name="minimal_distance" value="4" />
                <param name="t_step" value="0.05" />
                <param name="max_angle" value="1" />
            </group>
        </group>

        <param name="base_link_frame" value="ugr/car_base_link" />
        <param name="world_frame" value="ugr/car_odom" />

        <remap from="/input/path" to="/pathplanning/path" />
        <remap from="/output/drive_command" to="/control/drive_command" />
        <remap from="/output/target_point" to="/control/target_point" />
    </node>
</launch>