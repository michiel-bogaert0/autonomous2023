<launch>
    <node pkg="can_node" type="can_converter.py" name="can_converter" output="screen">
        <param name="interface" value="can0" />
        <param name="baudrate" value="250000" />
        <param name="odrive_dbc" value="$(find can_node)/odrive.dbc" />

        <remap from="/output/can" to="/can_messages" />
        <remap from="/output/vel0" to="/mechatronics/wheel_encoder/right" />
        <remap from="/output/vel1" to="/mechatronics/wheel_encoder/left" />
        <remap from="/output/imu0/pitch_roll" to="/mechatronics/imu/front/pitch_roll" />
        <remap from="/output/imu1/pitch_roll" to="/mechatronics/imu/back/pitch_roll" />
        <remap from="/output/imu0/angular_rate" to="/mechatronics/imu/front/angular_rate" />
        <remap from="/output/imu1/angular_rate" to="/mechatronics/imu/back/angular_rate" />
        <remap from="/output/imu0/acc" to="/mechatronics/imu/front/acc" />
        <remap from="/output/imu1/acc" to="/mechatronics/imu/back/acc" />
    </node>
</launch>